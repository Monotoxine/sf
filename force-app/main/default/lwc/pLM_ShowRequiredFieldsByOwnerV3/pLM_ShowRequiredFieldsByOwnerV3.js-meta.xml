<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__FlowScreen</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen,">
            <property name="recordId" label="recordId" type="String"/>
            <property name="stageName" label="Stage Name" type="String" />
            <property name="notValidated" label="Not Validated" type="Boolean" role="outputOnly"/>
            <property name="blockValidation" label="Block Validation" type="Boolean" role="inputOnly"/>
            <property name="plmTeam"  type="String" label="Select a team" />
            <property name="ids"  type="String[]" label="select shareclass Ids" />
            <property name="showBanner"  type="Boolean" label="Show Banner Info" role="outputOnly"/>
        </targetConfig>
        <targetConfig targets="lightning__RecordPage,">
            <property name="recordId" label="recordId" type="String"/>
            <property name="stageName" label="Stage Name" type="String"/>
            <property name="plmTeam"  type="String" label="Select a team" datasource="apex://PLM_getResponsiblePicklist"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>